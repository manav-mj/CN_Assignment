<div class="container">
  <h1>Login</h1>
  <%= form_tag '/login' do %>
    <%= label_tag :username %><br>
    <%= text_field_tag :username %><br>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %><br>
    <%= submit_tag "Login", class:'solid-button', style:'width:100%' %>
  <% end %>
</div>